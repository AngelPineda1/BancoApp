@model  BancoAPI.Models.Dtos.LoginDto
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/estilos.css"/>
    <title>BancoMéxico</title>
    
</head>

<body>
    <form method="post" action="~/Home/Login">
        <h3>BancoMéxico</h3>
        
        <label for="username">Nombre de usuario:</label>
        <input type="text" id="username" placeholder="Escribe tu nombre de usuario" asp-for="UserName">

        <label for="password">Contraseña:</label>
        <input type="password" id="password" placeholder="Escribe tu contraseña" asp-for="Password">

        <p style="margin-top:20px">@Html.ValidationSummary(true)</p>

        <input type="submit" value="Iniciar Sesión" />

    </form>
</body>

</html>