@model BancoMexicoWeb.Areas.Admin.Models.AgregarCajaViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


    <form method="post" asp-action="Agregar">
        <h3>Agregar Cajero</h3>
        <label asp-for="Nombre">Nombre de la caja</label>
        <input asp-for="Nombre" class="form-control" placeholder="Escribe el nombre de la caja"/>
        <label for="username">Nombre de usuario:</label>
        <input type="text" id="username" placeholder="Escribe el nombre de usuario" asp-for="Username">

        <label for="password">Contraseña:</label>
        <input type="password" id="password" placeholder="Escribe la contraseña" asp-for="Contrasena">

        <p style="margin-top:20px">@Html.ValidationSummary(true)</p>

        <input type="submit" value="Agregar" />
        <a href="~/Admin/Home" class="btncancelar">Cancelar</a>

    </form>


